
{{#if success_msg}}
<div class="alert alert-success" style="max-width: 280px; position: absolute;" role="alert">
  {{success_msg}}
</div>    
{{/if}}

{{#if error_msg}}
<div class="alert alert-danger" style="max-width: 280px; position: absolute;" role="alert">
  {{error_msg}}
</div>    
{{/if}}




{{#if todasAsAreasDeTrabalho}}
<section>
    <article class="container">
                    
    {{#each todasAsAreasDeTrabalho}}
    <a href="/area-de-trabalho/{{dataValues.id}}">
        <div style="max-width: 320px; margin: 50px 5px; border-radius: 10px; padding: 20px 25px; -webkit-box-shadow: 2px 2px 7px 1px rgba(0,0,0,0.15); box-shadow: 2px 2px 7px 1px rgba(0,0,0,0.15);">
                <small><span style="border-bottom: 0.5px solid #e2e2e2; padding: 0 0 2px 0; font-size: 10px;">{{tags.dataValues.titulo}}</span></small>
            <h4 style="margin: 7px 0;">{{dataValues.titulo}}</h4>
            <br>
            <div>Total de Quadros: {{../qtdeDeQuadros}}</div>
            <div>Total de Tarefas: {{../somaDeTarefas}}</div>

        </div>      
    </a>         
    {{/each}}
    </article>
</section>

