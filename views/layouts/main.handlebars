<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="stylesheet" href="css/style.css">

    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">

    <title>{{title}}</title>

</head>
<body>

    {{!-- {{#if authenticated}} --}}

    <button value="fechar" id="fechar" style="position: absolute; z-index: 1000; top: 52px; left: 242px; background-color: midnightblue; border-style: none; border-radius: 25px; color: #fff; font-size: 17px; width: 27px;"><</button>
    <button value="abrir" id="expandir" style="position: absolute; z-index: 1001; top: 52px; left: 2px; border-style: none; display: none; color: #fff; background-color: midnightblue; font-size: 17px; width: 27px; border-radius: 25px;">></button>
    
    

<div style="width: 100%; height: 100vh;">
    
    <div style="position: fixed; width: 100%;">
        <span style="display: block; background-color: blue; width: 20px; position: absolute; height: 100vh">
        <div id="navbar" style="width: 250px;">   
            {{>_header}}
        </div></span>
    </div>

    <div id="content" style="margin-left: 260px; padding: 5px 0; height: 100%;">
        {{{body}}}
    </div>

</div>



<script>
    var fechar = document.querySelector('#fechar')
    var expandir = document.querySelector('#expandir')
    var content = document.querySelector('#content')

    var navbar = document.querySelector('#navbar')

    fechar.addEventListener('click', fecharMenuLateral)

    expandir.addEventListener('click', abrirMenuLateral)


    function fecharMenuLateral() {
        fecharBotao = fechar.value

        console.log(fecharBotao)

        if(fecharBotao) {
            navbar.style.display = 'none'
            fechar.style.display = 'none'
            expandir.style.display = 'block' 
            content.style.marginLeft = '20px'
        }
    }

    function abrirMenuLateral() {
        abrirBotao = expandir.value

        console.log(abrirBotao)

        if(abrirBotao) {
            navbar.style.display = 'block'
            fechar.style.display = 'block'
            expandir.style.display = 'none'
            content.style.marginLeft = '260px'
        }
    }

</script>

{{!-- {{else}} --}}

    

{{!-- {{/if}} --}}

<!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>


</body>
</html>