<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">

    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">

    <title>{{title}}</title>

</head>
<body>

    <button value="fechar" id="fechar" style="position: absolute; z-index: 1000; top: 52px; left: 195px; border-style: none;">fechar</button>
    <button value="abrir" id="expandir" style="position: absolute; z-index: 1001; top: 52px; left: 5px; border-style: none; display: none; background-color: midnightblue; color: #fff;">abrir menu</button>
    
    

<div style="width: 100%; height: 100%; ">
    <div style="position: fixed; width: 100%;">
        <div style="width: 100%; height: 44px; position: relative; color: #000; background-color: blue;">
            teste 1
        </div>
        <div id="navbar" style="width: 250px; color: #fff;">   
            {{>_header}}
        </div>
    </div>

    <div id="content" style="margin-left: 260px; padding-top: 44px;">
        </section>
        {{{body}}}
    </div>

</div>

<script>
    var fechar = document.querySelector('#fechar')
    var expandir = document.querySelector('#expandir')
    var content = document.querySelector('#content')

    var navbar = document.querySelector('#navbar')

    fechar.addEventListener('click', fecharMenuLateral)

    expandir.addEventListener('click', abrirMenuLateral)


    function fecharMenuLateral() {
        fecharBotao = fechar.value

        console.log(fecharBotao)

        if(fecharBotao) {
            navbar.style.display = 'none'
            fechar.style.display = 'none'
            expandir.style.display = 'block' 
            content.style.marginLeft = '0px'       
        }
    }

    function abrirMenuLateral() {
        abrirBotao = expandir.value

        console.log(abrirBotao)

        if(abrirBotao) {
            navbar.style.display = 'block'
            fechar.style.display = 'block'
            expandir.style.display = 'none'
            content.style.marginLeft = '260px'
        }
    }

</script>


</body>
</html>